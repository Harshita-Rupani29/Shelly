# NPM Configuration for {{projectName}}
# Generated: {{date}}
#
# This file configures npm behavior for this project.
# Settings here override global npm config.

# ============================================================================
# PACKAGE MANAGER SETTINGS
# ============================================================================

# Allow version ranges in package.json (with ^ prefix)
# Improves reproducibility but requires manual updates
save-exact=false

# Save to package.json by default
save=true

# Default prefix for version ranges
save-prefix=^

# ============================================================================
# INSTALLATION BEHAVIOR
# ============================================================================

# Engine strict mode - fail if Node version doesn't match
engine-strict=true

# Legacy peer deps mode (for older packages)
# Set to true if encountering peer dependency issues
legacy-peer-deps=false

# Audit level threshold (critical, high, moderate, low)
audit-level=moderate

# Progress bar during install
progress=true

# Prefer offline package cache
prefer-offline=false

# ============================================================================
# SECURITY
# ============================================================================

# Warn when running scripts as root
unsafe-perm=false

# Ignore scripts during package installation
# Set to true for security-sensitive environments
ignore-scripts=false

# ============================================================================
# REGISTRY SETTINGS
# ============================================================================

# Default registry (uncomment to use)
# registry=https://registry.npmjs.org/

# Scoped package registries (uncomment and configure)
# @mycompany:registry=https://npm.mycompany.com/
# @juspay:registry=https://npm.pkg.github.com/

# GitHub Package Registry for @juspay packages
# @juspay:registry=https://npm.pkg.github.com
# //npm.pkg.github.com/:_authToken=${GITHUB_TOKEN}

# ============================================================================
# AUTHENTICATION (DO NOT COMMIT TOKENS!)
# ============================================================================

# Auth tokens should be set via:
# 1. npm login (stores in ~/.npmrc)
# 2. Environment variables (NPM_TOKEN)
# 3. CI/CD secrets

# Example (DO NOT USE - set via npm login or env):
# //registry.npmjs.org/:_authToken=${NPM_TOKEN}

# ============================================================================
# CACHE SETTINGS
# ============================================================================

# Cache directory (default: ~/.npm)
# cache=/path/to/cache

# Cache max age (seconds)
cache-min=10

# ============================================================================
# PUBLISHING
# ============================================================================

# Access level for published packages
access=public

# Tag for npm publish
tag=latest

# ============================================================================
# LOGGING
# ============================================================================

# Log level (silent, error, warn, notice, http, timing, info, verbose, silly)
loglevel=notice

# ============================================================================
# NETWORK
# ============================================================================

# Network timeout (milliseconds)
fetch-timeout=60000

# Retry attempts
fetch-retries=3

# Retry delay (milliseconds)
fetch-retry-mintimeout=10000
fetch-retry-maxtimeout=60000

# ============================================================================
# PROXY SETTINGS (uncomment if needed)
# ============================================================================

# HTTP proxy
# proxy=http://proxy.example.com:8080

# HTTPS proxy
# https-proxy=http://proxy.example.com:8080

# No proxy for certain hosts
# noproxy=localhost,127.0.0.1,.example.com

# ============================================================================
# GIT SETTINGS
# ============================================================================

# Commit message for npm version
message="chore(release): %s"

# Git tag version prefix
tag-version-prefix=v

# ============================================================================
# INIT DEFAULTS
# ============================================================================

# Default author for npm init
# init-author-name=Your Name
# init-author-email=your.email@example.com
# init-author-url=https://example.com

# Default license
init-license=MIT

# Default version
init-version=0.0.0

# ============================================================================
# WORKSPACE SETTINGS
# ============================================================================

# Install dev dependencies in workspaces
# workspaces-update=true

# ============================================================================
# MISC
# ============================================================================

# Use package-lock.json
package-lock=true

# Update notifier
update-notifier=true

# Automatically install peer dependencies
# auto-install-peers=true

# ============================================================================
# CI/CD SETTINGS
# ============================================================================

